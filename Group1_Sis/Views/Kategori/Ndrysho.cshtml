@model Kategoria
<form method="post">
    <div class="border p-3">
        <div class="row pt-3">
            <h6 class="text-primary">Ndrysho Kategorine</h6>
            <hr/>
        </div>
        <input type="hidden" asp-for="Id"/>
        <div class="mb-2">
            <label asp-for="Emri"></label>
            <input asp-for="Emri" class="form-control"/>
            <span asp-validation-for="Emri" class="text-danger"></span>
        </div>
       
        <button type="submit" class="btn btn-success">Ndrysho</button>
        <a asp-controller="Kategori" asp-action="Listo" class="btn btn-secondary">Kthehu</a>
    </div>
</form>