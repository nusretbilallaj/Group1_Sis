@model Student

<form method="post">
    <div class="border p-3">
        <div class="row">
            <h6 class="text-primary">Shto nje student</h6>
       
        </div>
        <hr/>
        <div class="mb-3">
            <label asp-for="Emri"></label>
            <input asp-for="Emri" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Mbiemri"></label>
            <input asp-for="Mbiemri" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="KomunaId"></label>
            <select asp-for="KomunaId" asp-items="ViewBag.Komunat" class="form-select">
                <option selected="" disabled="" value="0">--Cakto Komunen--</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Shto</button>
        <a class="btn btn-secondary" asp-controller="Student" asp-action="Listo">Kthehu</a>
    </div>
</form>